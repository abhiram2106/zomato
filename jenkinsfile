pipeline {
    agent any
    tools {
        jdk 'jdk17'
    }
    stages {
        stage ("clean workspace") {
            steps {
                cleanWs()
            }
        }
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/abhiram2106/DevOps-Project-Zomato-Kastro.git'
            }
        }
        stage("Install NPM Dependencies") {
            steps {
                sh "npm install"
            }
        }
        stage ("Build Docker Image") {
            steps {
                sh "docker build -t zomato1 ."
            }
        }
        stage ("Deploy to Container") {
            steps {
                sh 'docker run -d --name zomato_con -p 3005:3000 zomato1:v1'
            }
        }
    }
} 
